@model List<ChatGroup>
 
<div id="sidebar">
    <ul class="sidebar-menu">
        <li class="toggle-sidebar"><a href="#" data-toggle="sidebar"><i class="fas fa-users"></i></a></li>
        @if(Model != null) 
        { 
            foreach(var channel in Model)
            { 
                <li>
                    
                       @if(!String.IsNullOrWhiteSpace(channel.Picture))
                       {<a href="/group/@channel.Id" class="group-icon @(channel.IsCurrent ? "current-server": "")" data-toggle="tooltip" data-placement="right" data-title="@channel.Name">
                            <img src="@channel.Picture" width="48" height="48" alt="">
                        </a>
                       }
                       else
                       {
                           <a href="/group/@channel.Id" class="group-icon text-icon @(channel.IsCurrent ? "current-server": "")" data-toggle="tooltip" data-placement="right" data-title="@channel.Name">
                               <span class="channel-initial">@channel.Name[0]</span>
                            </a>
                           
                       }

                   
                </li>
            } 
        }
        <li>
            <a href="#" 
               class="join-server" 
               data-start="modal-custom" 
               data-target="#create-group" 
               data-toggle="tooltip" 
               data-placement="right" 
               data-title="Join a Group">
                <i class="fa fa-plus"></i>
            </a>
        </li>
    </ul>
</div>